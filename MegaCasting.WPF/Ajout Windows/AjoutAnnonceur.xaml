<Window x:Class="MegaCasting.WPF.Ajout_Windows.AjoutAnnonceur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Ajout d'un annonceur" Height="400" Width="600"  Background="Honeydew"  Icon="/MegaCasting.WPF;component/unnamed.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
            
        </Grid.RowDefinitions>

        <!-- GroupBoxs-->
        <GroupBox Header="Nom et Prénom" Foreground="Black"  Grid.Column="0" Grid.RowSpan="2" Margin="1"  Grid.ColumnSpan="2" Grid.Row="1" Width="auto"/>
        <GroupBox Header="Coordonnées" Foreground="Black"  Grid.Column="2" Grid.ColumnSpan="2"  Grid.RowSpan="2" Grid.Row="1" Margin="1" Width="auto"/>
        <GroupBox Header="Adresse" Foreground="Black"  Grid.Column="0" Grid.RowSpan="2" Margin="1"  Grid.ColumnSpan="4" Grid.Row="3" Width="auto"/>
        <GroupBox Header="Date de naissance" Foreground="Black"  Grid.Column="0" Grid.RowSpan="1" Margin="1"  Grid.ColumnSpan="2" Grid.Row="5" Width="auto"/>

        <!-- Label, non-porteur d'information -->

        <Label Content="Nom :" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"></Label>
        <Label Content="Prénom :" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"></Label>
        <Label Content="Téléphone :" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"></Label>
        <Label Content="Email :" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center"></Label>
        <Label Content="Rue :" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"></Label>
        <Label Content="Code postal :" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center"></Label>
        <Label Content="Ville :" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center"></Label>
        <Label Content="Pays :" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center"></Label>
        <Label Content="Date de naissance :" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5" ></Label>
        <!--Combobox-->

        <TextBox Name="TextBoxNomAjoutAnnonceur" Grid.Column="1" Grid.Row="1" Width="150" Height="25"></TextBox>
        <TextBox Name="TextBoxPrenomAjoutAnnonceur" Grid.Column="1" Grid.Row="2" Width="150" Height="25"></TextBox>
        <TextBox Name="TextBoxRueAjoutAnnonceur" Grid.Column="1" Grid.Row="3" Width="150" Height="25"></TextBox>
        <TextBox Name="TextBoxCPAjoutAnnonceur" Grid.Column="1" Grid.Row="4" Width="150" Height="25"></TextBox>
        <TextBox Name="TextBoxTelAjoutAnnonceur" Grid.Column="3" Grid.Row="1" Width="150" Height="25"></TextBox>
        <TextBox Name="TextBoxEmailAjoutAnnonceur" Grid.Column="3" Grid.Row="2" Width="150" Height="25"></TextBox>
        <TextBox Name="TextBoxVilleAjoutAnnonceur" Grid.Column="3" Grid.Row="3" Width="150" Height="25"></TextBox>
        <TextBox Name="textBoxPaysAjoutAnnonceur" Grid.Column="3" Grid.Row="4" Width="150" Height="25"></TextBox>
        <!--DatePicker-->
        <DatePicker Name="DatePickerNaissanceAnnonceur" Width="150" Height="25" Grid.Column="1" Grid.Row="5"></DatePicker>
        <!-- Bouton-->
        <Button Content="Ajouter"  Name="ButtonAjouterAnnonceur" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="4" Width="150" Height="25" Background="Green" Click="ButtonAjouterAnnonceur_Click"></Button>
    </Grid>
</Window>
