<Window x:Class="MegaCasting.WPF.AjoutTypeAbonnement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AjoutTypeAbonnement" Height="200" Width="200">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Column="0" Grid.Row="1" Content="Nom :" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <Label Grid.Column="0" Grid.Row="2" Content="Offre :" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="10" Name="TextBoxNom" ></TextBox>
        <TextBox Grid.Column="2" Grid.Row="2" Margin="10" Name="TextBoxOffre"></TextBox>
        <Button Name="ButtonAjoutTypeAbonnement" Grid.Column="1" Grid.Row="3" Content="Ajouter" Margin="10" Click="ButtonAjoutTypeAbonnement_Click"></Button>
        
        
    </Grid>
</Window>
