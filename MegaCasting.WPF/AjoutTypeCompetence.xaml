<Window x:Class="MegaCasting.WPF.AjoutTypeCompetence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AjoutTypeCompetence" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition Height="0.05*"></RowDefinition>
            
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="1" Content="Nom :" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
       
        <TextBox Height="25" Grid.Column="1" Grid.Row="1" Margin="10" Name="TextBoxNom" ></TextBox>

        <Button Height="25" Width="100" Name="ButtonAjoutTypeCompetence" Grid.Column="1" Grid.Row="3" Content="Ajouter" Margin="10" Click="ButtonAjoutTypeCompetence_Click"></Button>
    </Grid>
</Window>
